{
  "compilerOptions": {
    "outDir": "./dist",
    "strict": true,
    "sourceMap": true,
    "target": "es6",
    "moduleResolution": "node",
    "module": "commonjs",
    "rootDir": "src",
    "lib": [
      "es6",
      "dom"
    ],
    "skipLibCheck": true,
    "declaration": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
